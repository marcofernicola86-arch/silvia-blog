---
layout: base.njk
---

<article>
  <header class="post-header">
    <h1>{{ title }}</h1>

    <p class="post-meta">
      Pubblicato il {{ date | date("dd MMMM yyyy") }}
      {% if tags and tags.length %}
        Â· Tag:
        {% for tag in tags %}
          {{ tag }}{% if not loop.last %}, {% endif %}
        {% endfor %}
      {% endif %}
    </p>

    {% if cover %}
      <img src="{{ cover }}" alt="" class="post-cover" />
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

